<%= form_with model: task, local: true do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :details %><br>
    <%= f.text_area :details %>
  </p>

  <p>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
